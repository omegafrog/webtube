doctype html 
html(lang="ko")
    head
        title #{pageTitle} | webtube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1 
                a(href="/") Webtube
            h2 #{pageTitle}
            nav 
                if fakeUser.loggedIn 
                    small hello #{fakeUser.name}
                ul 
                    if fakeUser.loggedIn
                        li
                            a(href="/logout") Logout
                    else 
                        li 
                            a(href="/login") Login
                    li
                        a(href="/videos/upload") Upload Video
                    li
                        a(href="/search") Search Video
                    li 
                        a(href="/join") Create User
        main
            block content
    include partials/footer